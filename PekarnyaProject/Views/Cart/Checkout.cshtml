@model PekarnyaProject.Models.OrderViewModel
@{
    ViewData["Title"] = "Оформлення замовлення";
}

<div class="container mt-4">
    <h2>Оформлення замовлення</h2>
    <form asp-action="Checkout" method="post" class="col-md-6">
        <div class="mb-3">
            <label>Ваше ім'я</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Телефон</label>
            <input asp-for="Phone" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Адреса доставки</label>
            <textarea asp-for="Address" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Підтвердити замовлення</button>
    </form>
</div>
<div class="my-3">
    <h5>Оберіть спосіб оплати:</h5>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="paymentMethod" value="cash" checked>
        <label class="form-check-label">Оплата при отриманні</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="paymentMethod" value="card">
        <label class="form-check-label">Оплата картою онлайн</label>
    </div>
</div>